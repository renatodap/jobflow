# Database Configuration
# For Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# For local PostgreSQL
DATABASE_URL=postgresql://jobflow:jobflow_pass_2024@localhost:5432/jobflow

# LLM Configuration
# Options: mock (for testing), openai, anthropic
LLM_PROVIDER=mock
LLM_API_KEY=your-api-key-here

# For OpenAI
OPENAI_API_KEY=sk-...

# For Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Storage Configuration
# Options: local, s3, gcs
STORAGE_TYPE=local

# For AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-west-2
S3_BUCKET=jobflow-documents

# For Google Cloud Storage
GCS_BUCKET=jobflow-documents
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Notification Configuration
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL_ID=C1234567890

# Email (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password

# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678
N8N_API_KEY=optional-api-key

# Application Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5678
LOG_LEVEL=info
ENVIRONMENT=development

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds

# Job Source API Keys (optional)
GREENHOUSE_API_KEY=
LEVER_API_KEY=
WORKABLE_API_KEY=

# Google Jobs Search (via SerpAPI)
SERPAPI_KEY=

# Monitoring (optional)
SENTRY_DSN=
DATADOG_API_KEY=